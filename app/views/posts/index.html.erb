<p id="notice"><%= notice %></p>
<div class="container">
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Created:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.username %></td>
        <td><%= time_ago_in_words(post.created_at) %> ago</td>
        <%= show_post_buttons(post) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>